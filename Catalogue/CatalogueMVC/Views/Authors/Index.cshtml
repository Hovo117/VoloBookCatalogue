@model IEnumerable<BooksEntitiesDAL.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Authors</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="#" onclick="@("window.location.href='" + @Url.Action("Details", "Authors",new { id = item.AuthorID }) + "'");event.preventDefault();">
                    @Html.DisplayFor(modelItem => item.FullName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a title="Edit" style="background-color:white;" class="btn" href="@Url.Action("Edit", new { id = @item.AuthorID })">
                        <span class="glyphicon glyphicon-pencil "></span>
                    </a>

                    <a title="Delete" style="background-color:white;" class="btn" href="@Url.Action("Delete", new { id = @item.AuthorID })">
                        <span class="glyphicon glyphicon-trash "></span>
                    </a>
                }
            </td>
        </tr>
    }

</table>
