@model BooksEntitiesDAL.Author

@{
    ViewBag.Title = "Details";
}

<div>

    <h2 style="display:inline-block">@Model.FullName</h2>
    @if (User.Identity.IsAuthenticated)
    {
        <a title="Edit" href="@Url.Action("Edit",new { id = Model.AuthorID })" style="margin-left:30px;"><span class="glyphicon glyphicon-pencil l1"></span> </a>
    }

</div>

<div>
    <hr />
    <dl class="dl-horizontal" style="font-size:larger;">
        <dt>
            @Html.DisplayNameFor(model => model.FullName) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

    </dl>
</div>
<p>
    <a title="Go Back" href="javascript:history.back()"><span class="glyphicon glyphicon-arrow-left l1"></span> </a>
</p>
